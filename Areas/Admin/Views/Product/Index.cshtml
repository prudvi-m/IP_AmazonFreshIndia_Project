<!-- Path: Areas/Admin/Views/Product/Index.cshtml -->
@* @model IEnumerable<IP_AmazonFreshIndia_Project.ViewModels.ProductViewModel> *@
@model IP_AmazonFreshIndia_Project.ViewModels.ProductFilterViewModel

<h2>Products</h2>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Unit</th>
			<th>Vendor Name</th>
			<th>Warehouse</th>
			<th>Sold Count</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
										<tr>
											<td>@product.Name</td>
											<td>@product.UnitPrice</td>
											<td>@product.Unit</td>
											<td>@product.VendorName</td>
											<td>@product.WarehouseName</td>
											<td>@product.SoldCount</td>
											<td>
												<a asp-action="Edit" asp-route-id="@product.ProductId">Edit</a> |
					@* <a asp-action="Delete" asp-route-id="@product.ProductId">Delete</a> *@
												<form asp-action="Delete" asp-route-id="@product.ProductId" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
																	<button type="submit">Delete</button>
																</form>
											</td>
										</tr>
		}
	</tbody>
</table>

<a asp-action="Create">Add New Product</a>


